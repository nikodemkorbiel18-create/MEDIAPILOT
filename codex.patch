+.faq-list { display: grid; gap: 10px; }
+.faq-item { border: 1px solid var(--stroke); border-radius: 14px; background: rgba(255,255,255,0.03); overflow: hidden; }
+.faq-question { width: 100%; text-align: left; background: transparent; color: #fff; padding: 14px 16px; display: flex; align-items: center; justify-content: space-between; }
+.chevron { transition: transform 0.3s ease; }
+.faq-answer { max-height: 0; overflow: hidden; padding: 0 16px; color: var(--muted); line-height: 1.6; transition: max-height 0.35s ease, padding 0.35s ease; }
+.faq-item.open .faq-answer { max-height: 300px; padding: 0 16px 16px; }
+.faq-item.open .chevron { transform: rotate(180deg); }
+
+.footer { margin-top: 50px; padding: 24px 0 0; border-top: 1px solid var(--stroke); color: var(--muted); }
+.footer-top { display: flex; align-items: center; justify-content: space-between; gap: 12px; flex-wrap: wrap; }
+.footer-links { display: flex; gap: 12px; }
+.footer a { color: var(--muted); text-decoration: none; padding: 8px 10px; border-radius: 10px; transition: background 0.2s ease; }
+.footer a:hover { background: rgba(255,255,255,0.05); color: #fff; }
+.footnote { margin: 12px 0 0; }
+
+.reveal { opacity: 0; transform: translateY(24px); transition: opacity 0.6s ease, transform 0.6s ease; }
+.reveal.visible { opacity: 1; transform: translateY(0); }
+
+section { scroll-margin-top: 110px; }
+
+@media (prefers-reduced-motion: reduce) {
+  .hero-canvas { display: none; }
+  .hero::after { display: none; }
+  .reveal { transition: none; }
+  .btn { transition: none; }
+}
+
+@media (max-width: 960px) {
+  .nav { grid-template-columns: 1fr auto; grid-template-areas: "left actions" "links links"; }
+  .nav-left { grid-area: left; }
+  .nav-links { grid-area: links; justify-content: flex-start; overflow-x: auto; }
+}
+
+@media (max-width: 720px) {
+  .nav-links { display: none; }
+  .nav { grid-template-columns: 1fr auto; }
+  .hero { padding: 50px 26px; }
+  .hero-ctas { flex-direction: column; align-items: stretch; }
+  .review-card { width: 100%; }
+  .logo-track { grid-auto-flow: row; grid-auto-columns: unset; grid-template-columns: repeat(auto-fit, minmax(140px, 1fr)); }
+  .hero-card { padding: 16px; }
+  .upload-area { flex-direction: column; align-items: flex-start; }
+}
